<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10px"
                android:layout_marginTop="20px"
                android:layout_marginRight="490px"
                android:layout_marginBottom="20px"
                android:contentDescription="@string/app_name"
                android:text="SISTEMA PACIENTE ENFERMERA"
                android:textSize="30sp" />

            <Button
                android:id="@+id/configuracion"
                android:layout_width="200px"
                android:layout_height="150px"
                android:layout_marginRight="10px"
                android:text="CONFIGURACION" />
            <Button
                android:id="@+id/BT"
                android:layout_width="200px"
                android:layout_height="150px"
                android:layout_marginLeft="10px"
                android:text="Conectar"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fecha"
                android:layout_width="800px"
                android:textSize="50px"
                android:layout_height="400px" />

            <TextView
                android:id="@+id/hora"
                android:layout_width="300px"
                android:textSize="50px"
                android:layout_height="400px" />

            <TextView
                android:id="@+id/Errores"
                android:layout_width="140px"
                android:textSize="50px"
                android:layout_height="400px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ASISTENCIA"
                android:layout_width="500px"
                android:layout_height="250px"
                android:layout_marginLeft="35px"
                android:layout_marginRight="850px"
                android:text="ASISTENCIA" />

            <Button
                android:id="@+id/EMERGENCIA"
                android:layout_width="500px"
                android:layout_height="250px"
                android:layout_marginRight="35px"
                android:text="EMERGENCIA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/ASISTENCIAHECHA"
                android:layout_width="500px"
                android:layout_height="200px"
                android:layout_marginLeft="150px"
                android:layout_marginRight="150px"
                android:text="ASISTENCIA HECHA" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
